% speach bubble
\newcommand{\bubble}[1]{%
   \sffamily\tcbox[%
     colback=white,%
     colframe=color1,%
     sharp corners=southeast,%
	 arc=2.2ex,%
	 boxsep=0pt,%
	 left=1.2em,%
	 right=1.2em,%
	 top=1.1ex,
	 bottom=0.9ex,
	 right skip=-1.5em%
   ]{\color{black}\begin{varwidth}{.75\textwidth}\raggedleft\textit{#1}\end{varwidth}}%
}

